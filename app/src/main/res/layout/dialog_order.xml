<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogPersonsNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="casual"
        android:text="name"
        app:layout_constraintBottom_toTopOf="@+id/dialogPhoneNumberTV2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Address"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/dialogAddressTV" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Pizza"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/dialogPizzaTV" />

    <TextView
        android:id="@+id/dialogPizzaTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="pizza"
        app:layout_constraintBottom_toTopOf="@+id/dialogToppingsTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialogAddressTV"
        app:layout_constraintTop_toBottomOf="@+id/dialogAddressTV" />

    <TextView
        android:id="@+id/dialogAddressTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="3"
        android:text="address"
        app:layout_constraintBottom_toTopOf="@+id/dialogPizzaTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialogPhoneNumberTV2"
        app:layout_constraintTop_toBottomOf="@+id/dialogPhoneNumberTV2"
        android:fontFamily="casual" />

    <TextView
        android:id="@+id/dialogToppingsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:lines="3"
        android:text="toppings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialogPizzaTV"
        app:layout_constraintTop_toBottomOf="@+id/dialogPizzaTV" />

    <TextView
        android:id="@+id/dialogPhoneNumberTV2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="phone"
        app:layout_constraintBottom_toTopOf="@+id/dialogAddressTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialogPersonsNameTV"
        app:layout_constraintTop_toBottomOf="@+id/dialogPersonsNameTV" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialogPersonsNameTV" />

    <TextView
        android:id="@+id/dialogPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="price"
        app:layout_constraintEnd_toEndOf="@+id/dialogToppingsTV"
        app:layout_constraintTop_toBottomOf="@+id/dialogToppingsTV" />

    <Button
        android:id="@+id/takeDismissButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/take"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogPriceTV" />

    <ProgressBar
        android:id="@+id/mapsProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>